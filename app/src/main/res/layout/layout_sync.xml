<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/margin_150"
        android:layout_height="@dimen/margin_150"
        android:background="@drawable/app_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"/>

    <RelativeLayout
        android:id="@+id/tv_op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_50"
        android:background="@drawable/gradient"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_below="@+id/img">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_16"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_5"
            android:text="VINCULAR DISPOSITIVO CON NFC"
            android:textStyle="bold"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tv_op2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/gradient"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_below="@id/tv_op1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_16"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_5"
            android:text="CAMBIAR NOMBRE"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_op3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:background="@drawable/gradient"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_below="@id/tv_op2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_16"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_5"
            android:text="ASIGNAR ALMACENAMIENTO"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/margin_100"
        android:layout_height="@dimen/margin_100"
        android:layout_below="@id/tv_op3"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>